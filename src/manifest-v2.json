{
  "description": "DontBugMe allows you to easily use credentials from BugMeNot.com on any page.",
  "version": "2.0.0",
  "name": "DontBugMe",
  "background": {
    "scripts": ["background.bundle.js"]
  },
  "browser_action": {
    "default_icon": {
      "34": "icon-34.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "http://bugmenot.com/view/*"
  ],
  "content_scripts": [{
    "all_frames": true,
    "matches": ["http://*/*", "https://*/*", "<all_urls>"],
    "js": ["contentScript.bundle.js"],
    "css": ["content.styles.css"]
  }],
  "web_accessible_resources": ["content.styles.css", "icon-128.png", "icon-34.png"],
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://scripts.simpleanalyticscdn.com https://a.vantezzen.io; object-src 'self'"
}